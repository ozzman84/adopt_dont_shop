<h1>AdminShelters#index</h1>

<div class='container'>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">City</th>
        <th scope="col">Foster Program</th>
        <th scope="col">Rank</th>
      </tr>
    </thead>
    <tbody>
      <% @admin_s.each do |shelter| %>
      <tr>
        <th scope="row"><%= shelter.id %></th>
        <td><%= shelter.name %></td>
        <td><%= shelter.city %></td>
        <td><%= shelter.foster_program %></td>
        <td><%= shelter.rank %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class='container'>
  <div class="container" id="pending_apps"><h1>Shelter's with Pending Applications</h1>
    <table class="table table-hover" id>
      <thead>
        <tr>
          <th scope="col">Name</th>
        </tr>
      </thead>
      <tbody>
        <% @admin_s_pending_apps.each do |shelter| %>
        <tr>
          <th scope="row"></th>
          <td><%= shelter %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
